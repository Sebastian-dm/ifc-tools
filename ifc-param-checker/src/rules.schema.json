{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["version", "rules"],
  "properties": {
    "version": {"type": "integer"},
    "ifc_schemas": {"type": "array", "items": {"type": "string"}},
    "defaults": {
      "type": "object",
      "properties": {
        "scope": {"enum": ["elements", "types", "both"]},
        "when_missing_property": {"enum": ["fail", "warn", "skip"]},
        "case_sensitive": {"type": "boolean"},
        "ignoredEntities": {"type": "array", "items": {"type": "string"}}
      },
      "additionalProperties": false
    },
    "rules": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "title", "targetEntities", "checks"],
        "properties": {
          "id": {"type": "string"},
          "title": {"type": "string"},
          "targetEntities": {
            "type": "array",
            "items": {"type": "string"},
            "minItems": 1
          },
          "targetEntityProperties": {
            "type": "array",
            "items": {
              "type": "object",
              "patternProperties": {
                ".*": {"type": "array", "items": {"type": "string"}}
              },
              "additionalProperties": false
            },
            "optional": true
          },
          "checks": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["property"],
              "properties": {
                "property": {"type": "string"},
                "required": {"type": "boolean"},
                "allowedValues": {"type": "array", "items": {"type": "string"}},
                "pattern": {"type": "string"}
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}